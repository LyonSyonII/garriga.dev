---
import type { Project } from "../../gitprofile.config";

export type Props = {
  title: string;
  projects: Project[];
};

const { title, projects = [] } = Astro.props;

const icon_size = 60;
---

<div class="card">
  <h2>{title}</h2>
  <div class="grid">
    {
      projects.map((project) => (
        <a href={project.link} target="_blank">
          <article>
            <h3>{project.title}</h3>
            {project.imageUrl && <img src={project.imageUrl} height={icon_size} />}
            <b>{project.description}</b>
          </article>
        </a>
      ))
    }
  </div>
</div>


<style>
  @import "../styles/main.css";

  h2 {
    margin-left: calc(var(--card-padding) - var(--card-container-padding));
  }

  .grid {
    display: grid;
    gap: 1rem;
  }

  a {
    text-decoration: none;
    display: flex;
    transition: transform 0.15s ease-in-out;
  }
  
  a:hover {
    transform: scale(1.05);
  }

  article {
    padding: var(--card-padding);
    display: grid;
    align-items: start;
    justify-items: center;
    text-align: center;

    width: 100%;
  }

  h3 {
    font-size: var(--text-md);
    margin-bottom: 1em;
    opacity: 0.7;
  }

  b {
    line-height: 1rem;
    font-size: var(--text-sm);
    word-wrap: break-word;
  }

  @media (--screen-desktop) {
    .card {
      grid-column: span 3;
    }
    
    .grid {
      grid-template-columns: 1fr 1fr 1fr;
      grid-auto-rows: 13.5rem;
    }
    
    article {
      grid-template-rows: 2rem 1fr 1fr;
    }
  }
</style>
