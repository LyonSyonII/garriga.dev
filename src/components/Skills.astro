---
import config from "../../gitprofile.config";
import { Icon, Image } from "astro-preload/components";

const icon_size = 42;
---

<div class="card">
  <article>
    <h2>Tech Stack</h2>
    <div class="grid">
      {
        config.skills.map((skill) => (
          <a href={skill.url} target="_blank">
            {skill.icon ? (
              <Icon name={skill.icon} size={icon_size} />
            ) : (
              <Image url={skill.imageUrl || ""} size={icon_size} />
            )}
          </a>
        ))
      }
    </div>
  </article>
  <article>
    <h2>Some experience with...</h2>
    <div class="grid">
      {
        config.some_experience_with.map((skill) => (
          <a href={skill.url} target="_blank">
            {skill.icon ? (
              <Icon name={skill.icon} size={icon_size} />
            ) : (
              <Image url={skill.imageUrl || ""} size={icon_size} />
            )}
          </a>
        ))
      }
    </div>
  </article>
</div>

<style>
  @import "../styles/main.css";

  .card {
    display: grid;
  }

  @media (--screen-desktop) {
    .card {
      grid-column: span 3;
      grid-template-columns: 1fr 1fr;
    }
  }

  .card > article {
    display: grid;
    grid-template-rows: auto 1fr;
    padding: var(--card-padding);
    padding-bottom: var(--card-padding-bottom);
  }

  .grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-self: center;
    justify-self: center;
    gap: 0.5rem;
  }

  a {
    transition: transform 0.15s ease-in-out;
  }
  
  a:hover {
    transform: scale(1.15);
  }
</style>
