---
import "../styles/main.css";
import config from "../../gitprofile.config";
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-iconify";

const icon_size = 24;
---

<div class="card">
  <article class="profile">
    <Image
      src="/assets/favicons/android-icon-144x144.png"
      width={128}
      height={0}
      aspectRatio={1}
      alt="Profile picture"
      format="png"
    />
    <h1>{config.social?.name}</h1>
  </article>
  <article class="data">
    <a href={`https://github.com/${config.github.username}`}>
      <Icon name="mdi:github" size={icon_size} /><span>{config.github.username}</span>
    </a>
    <a href={`mailto:${config.social?.email}`}>
      <Icon name="material-symbols:mail" size={icon_size} /><span>{config.social?.email}</span>
    </a>
  </article>
</div>

<style>
  .card {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .profile {
    display: grid;
    justify-items: center;
    color: var(--text-color);
    padding-bottom: var(--card-padding);
  }

  img {
  }

  .data {
    display: grid;
    align-content: space-evenly;
  }

  .data > a {
    display: grid;
    grid-template-columns: auto auto;
    justify-content:space-between;
    align-items: center;
    padding: var(--card-padding);
    
    color: var(--text-color);
    opacity: 0.6;
    font-size: var(--text-sm);
    text-decoration: none;

    transition: opacity 0.15s ease-in-out;
  }

  .data > a:hover {
    opacity: 0.75;
  }

  h1 {
    min-width: max-content;
  }
</style>
